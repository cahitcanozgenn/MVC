@using MvcProject.Models.Entity
@model List<category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/_MainLayout.cshtml";
}

<h2 class="text-center">KATEGORİLER</h2>

<table class="table table-bordered">
    <tr>
        <th class="text-center">SIRA NO</th>
        <th class="text-center">KATEGORİ ADI</th>
        <th class="text-center">GÜNCELLE</th>
        <th class="text-center">SİL</th>
    </tr>
  
        @foreach(var category in Model)
            {
<tr>
    <th class="text-center">@category.categoryId</th>
    <th class="text-center">@category.categoryName</th>
    <th class="text-center"><a href="/Category/categoryList/@category.categoryId" class="btn btn-primary">GÜNCELLE</a></th>
    <th class="text-center"><a href="/Category/Delete/@category.categoryId" class="btn btn-danger">SİL</a></th>
</tr>
          
            }
</table>
<a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>

