@model MvcProject.Models.Entity.category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Home/_MainLayout.cshtml";
}

<h2>Yeni Kategori Ekleme Sayfası</h2>

    <form class="form-group" method="post">
        <div>
            <label>KATEGORİ ADI</label>
            @Html.TextBoxFor(m=>m.categoryName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m=>m.categoryName,"", new {@style="color:red"})
        </div>

        
        <div style="margin-top:15px">
            <button class="btn btn-info">EKLE</button>
        </div>
        
    </form>

